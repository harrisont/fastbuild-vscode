{
	"name": "fastbuild-lsp",
	"description": "FASTBuild language server and Visual Studio client",
	"author": "harrisont",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/harrisont/fbuild-vscode-lsp"
	},
	"categories": [],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:fastbuild"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "FASTBuild language server configuration",
			"properties": {
				"fastbuild.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc --build",
		"watch": "tsc --build --watch",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "node server/out/test/runTest"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^4.0.2"
	}
}
