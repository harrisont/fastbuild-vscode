{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm compile",
			"type": "npm",
			"script": "compile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			],
			"dependsOn": [
				"build grammar"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"type": "npm",
			"script": "install"
		},
		{
			"type": "npm",
			"script": "test",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"dependsOn": "npm compile"
		},
		{
			"label": "build grammar",
			"type": "process",
			"command": "node",
			"args": [
				"server/node_modules/nearley/bin/nearleyc.js",
				"server/src/fbuild-grammar.ne",
				"--out",
				"server/src/fbuild-grammar.ts"
			],
			"group": "build",
			"problemMatcher": []
		}
	]
}